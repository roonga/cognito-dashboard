@page "/users/{UserName}"

@using CognitoDashboard.Models
@using CognitoDashboard.Shared;

<nav>
    <ol class="breadcrumb border border-0">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/Users">Users</a></li>
        <li class="breadcrumb-item active">@UserName</li>
    </ol>
</nav>


@if (_response == null)
{
    <Loading />
}
else
{
    <div class="container-fluid d-flex align-items-start">
        <div class="col shadow p-3 mb-5 bg-light rounded p-3 gx-3">
            @if (IsReadOnly)
            {
                <p class="text-end mb-0">
                    <a class="btn btn-light border-0 shadow-none btn-sm text-primary me-5-3" type="button" @onclick="Edit"><i
                    class="bi bi-pencil me-1"></i>Edit</a>
                    <a class="btn btn-light border-0 shadow-none btn-sm text-danger" type="button" @onclick="Delete"><i
                    class="bi bi-trash me-1"></i>Delete</a>
                </p>
            }
            else
            {
                <p class="text-end mb-0">
                    <a class="btn btn-light border-0 shadow-none btn-sm" type="button" @onclick="Cancel"><i
                    class="bi bi-x-lg me-1"></i></a>
                </p>
            }

            <DisplayErrorMessages Messages="_errorMessages" OnClear="ClearErrorMessages" />

            <DisplaySuccessMessages Messages="_successMessages" OnClear="ClearSuccessMessages" />

            <form class="row" novalidate>
                <div class="mb-3">
                    <label for="Username" class="form-label">Username</label>
                    <input class="form-control" id="Username" placeholder="Username" readonly value="@_response.Username">
                </div>

                <div class="mb-3">
                    <label for="UserStatus" class="form-label">User Status</label>
                    <input class="form-control" id="UserStatus" placeholder="UserStatus" readonly
                    value="@_response.UserStatus.Value">
                </div>

                @foreach (var attr in _response.UserAttributes)
                {
                    <div class="mb-3">
                        <label for="@attr.Name" class="form-label">@attr.Name.ToTitleCase()</label>
                        <input class="form-control" id="@attr.Name" placeholder="@attr.Name" readonly value="@attr.Value">
                    </div>
                }

                @if(_response.UserMFASettingList != null && _response.UserMFASettingList.Any())
                {
                    <div class="mb-3">
                        <label for="MfaSettings" class="form-label">MFA Settings</label>
                        @foreach (var setting in _response.UserMFASettingList)
                        {
                            <input class="form-control" readonly value="@setting">
                        }
                    </div>
                }

                <div class="mb-3">
                    <label for="UserCreateDate" class="form-label">User Create Date</label>
                    <input class="form-control" id="UserCreateDate" placeholder="UserCreateDate" readonly
                    value="@_response.UserCreateDate">
                </div>

                <div class="mb-3">
                    <label for="UserLastModifiedDate" class="form-label">User Last Modified Date</label>
                    <input class="form-control" id="UserLastModifiedDate" placeholder="UserLastModifiedDate" readonly
                    value="@_response.UserLastModifiedDate">
                </div>

            </form>

            @if (_isDeleteMode)
            {
                <div class="d-flex justify-content-between align-items-center alert alert-danger mt-2" role="alert">
                    <div class="me-3"><i class="bi bi-exclamation-triangle-fill me-2"></i>Are you sure you want to delete this
                        group?</div>
                    <div>
                        <button class="btn btn-danger me-3" type="button" @onclick="ConfirmDeleteUser"><i
                        class="bi bi-trash me-2"></i>Yes</button>
                        <a class="btn btn-secondary" type="button" @onclick="Cancel"><i class="bi bi-x-lg me-2"></i>No</a>
                    </div>
                </div>
            }
        </div>
        <div class="col-2 ms-3">
            <div class="list-group">
                <a class="list-group-item list-group-item-action" href="/users/@UserName/users"><i
                    class="bi bi-people me-1" /> Users</a>
                <a class="list-group-item list-group-item-action" href="/users/@UserName/users/add"><i
                    class="bi bi-person-plus me-1" /> Add Users</a>
            </div>
        </div>
    </div>
}
